#!/usr/bin/env node
require("coffee-script");
var
    watch = require("watch"),
    path = require("path"),
    server = require("../server"),
    _ = require("lodash"),
    optimist = require('optimist');

var argv = optimist
  .usage('Usage: quickreload [root] {OPTIONS}')
  .wrap(80)
  .option('help', {
    alias: 'h',
    desc : 'Show this help'
  })
  .option('css', {
    default: 'css,sass',
    desc : 'CSS file extensions.'
  })
  .option('js', {
    default: 'js,coffee,json',
    desc : 'JavaScript file extensions.'
  })
  .option('html', {
    default: 'html',
    desc : 'HTML file extensions.'
  })
  .option('ignore', {
    alias : 'i',
    desc : 'Ignore a directory'
  }).argv;

if (argv.help) {
  return optimist.showHelp()
}

send = server.serve();

var deb = function(func) {
  return _.debounce(func, 50);
};

var toExt = function(ext) {
  return "."+ext;
};

var listeners = {
  css: {
    match: new RegExp(argv.css.split(",").map(toExt).join("|")+"$"),
    onChange: deb(function() {
      send("reload-css");
    })
  },
  js: {
    match: new RegExp(argv.js.split(",").map(toExt).join("|")+"$"),
    onChange: deb(function(f) {
      send("reload-js");
    })
  },
  html: {
    match: new RegExp(argv.html.split(",").map(toExt).join("|")+"$"),
    onChange: deb(function(f) {
      send("reload");
    })
  }
};

var handleChange = function(f, stat) {
  Object.keys(listeners).forEach(function(key) {
    var listener = listeners[key];
    if (f.match(listener.match))
      listener.onChange(f);
  });
};

watch.createMonitor(".", {interval: 100}, function (monitor) {
  monitor.on("created", handleChange);
  monitor.on("changed", handleChange);
  monitor.on("removed", handleChange);
  console.log("Watching " + path.resolve("."))
});
